<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/book_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking no:9656" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_no"
                android:layout_marginTop="20dp"
                android:padding="6dp"
                android:text="@string/message_content"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_content"
                android:layout_toLeftOf="@+id/status_symbol"
                android:text="Check Status"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignBottom="@+id/status_symbol" />

            <ImageView
                android:id="@+id/status_symbol"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/message_content"
                android:layout_below="@+id/message_content"
                android:src="@drawable/live_draw" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>